{
  "name": "@pokequest/pokeapi",
  "version": "1.0.0",
  "description": "PokeAPI wrapper",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean:compile && npm run lint && npm run compile",
    "clean:compile": "rm -rf dist/",
    "clean:test": "rm -rf nyc_output/ && rm -rf coverage/",
    "compile": "tsc",
    "lint": "npm run lint:ts && npm run lint:json",
    "lint:json": "prettier --config prettier-json.json '**/!(package*|tsconfig*).json' --write",
    "lint:ts": "tslint -p . --fix",
    "test": "npm run clean:test && nyc mocha --opts ./mocha.opts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pokequest/pokeapi.git"
  },
  "keywords": [
    "PokeAPI",
    "Pokemon",
    "PokeQuest"
  ],
  "author": "Michael Randolph <mrand01@gmail.com> (https://github.com/mrand01)",
  "license": "MIT",
  "bugs": "https://github.com/pokequest/pokeapi/issues",
  "homepage": "https://github.com/pokequest/pokeapi#readme",
  "private": true,
  "dependencies": {
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/expect": "^1.20.3",
    "@types/mocha": "^5.2.5",
    "@types/request-promise-native": "^1.0.15",
    "chai": "^4.2.0",
    "expect": "^23.6.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run compile"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:ts",
      "git add"
    ],
    "*.json": [
      "npm run lint:json",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "instrument": true,
    "sourceMap": true
  }
}
